<h2><%= @listing.title %></h2>

<h4><%= @listing.content %></h4>

<% if @listing.reviews.any? %>
  <% @listing.reviews.each do |review| %>
    <ul>
      <li><%= review.content %> <%= link_to "Edit", edit_listing_review_path(@listing, review), :class => 'btn btn-warning' %>, <%= link_to "Delete", listing_review_path(@listing, review), :class => 'btn btn-danger'%></li>
    </ul>
  <% end %>
  <% else %>
  <p>
    No reviews have yet been posted.
  </p>
<% end %>

<h3>Add a review</h3>
  <%= render 'reviews/form' %>


<p>
  <%= link_to "Edit Listing", edit_listing_path(@listing) %>
</p>

<p>
  <%= link_to "Delete Posting", listing_path(@listing),
  :data => {
    :confirm => "You sure?",
    :method => "delete"
    } %>
</p>

<p>
  <%= link_to "Back", root_path, :class => 'btn btn-info btn-sm' %>
</p>
